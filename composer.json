{
    "$schema": "https://getcomposer.org/schema.json",
    "name": "yourvendor/flowbite-starter-kit",
    "type": "library",
    "description": "Flowbite Starter Kit for Laravel applications with pre-configured UI components and layouts.",
    "keywords": [
        "laravel",
        "flowbite",
        "tailwind",
        "ui",
        "starter-kit"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Your Name",
            "email": "your.email@example.com"
        }
    ],
    "require": {
        "php": "^8.2",
        "laravel-lang/common": "^6.7",
        "laravel/framework": "^12.0",
        "laravel/tinker": "^2.10.1",
        "livewire/livewire": "^3.6",
        "mews/captcha": "^3.4",
        "power-components/livewire-powergrid": "^6.3",
        "wireui/wireui": "^2.4"
    },
    "require-dev": {
        "fakerphp/faker": "^1.23",
        "laravel/pail": "^1.2.2",
        "laravel/pint": "^1.13",
        "laravel/sail": "^1.41",
        "mockery/mockery": "^1.6",
        "nunomaduro/collision": "^8.6",
        "pestphp/pest": "^3.8",
        "pestphp/pest-plugin-laravel": "^3.2"
    },
    "autoload": {
        "psr-4": {
            "YourVendor\\FlowbiteStarterKit\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-package-install": [
            "@php artisan vendor:publish --tag=flowbite-starter-kit-assets --ansi --force"
        ],
        "test": [
            "@php artisan test"
        ]
    },
    "extra": {
        "laravel": {
            "providers": [
                "YourVendor\\FlowbiteStarterKit\\FlowbiteStarterKitServiceProvider"
            ],
            "aliases": {
                "FlowbiteStarterKit": "YourVendor\\FlowbiteStarterKit\\Facades\\FlowbiteStarterKit"
            }
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "php-http/discovery": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
